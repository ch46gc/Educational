<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/snowboards">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/educational"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        tools:context="com.example.android.educational.MainActivity">




        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/question_1_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox1Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="#000000"
            android:text="@string/a_1980" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox2Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="#000000"
            android:text="@string/b_1970" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox3Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="#000000"
            android:text="@string/c_1960" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/question_2_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="18dp"
            android:paddingLeft="18dp">


            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton1Clicked"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="@string/a_snurfer"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton2Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:textColor="#000000"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="@string/b_skis" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton3Clicked"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:textColor="#000000"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="@string/c_monoski" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/question_3_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:hint="@string/country"
            android:onClick="editText1" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/question_4_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="checkBox4Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="#000000"
            android:text="@string/a_sugarbush_resort" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="checkBox5Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="#000000"
            android:text="@string/b_stratton_mountain_resort" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="checkBox6Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="#000000"
            android:text="@string/c_squaw_valley_resort" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/question_5_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:onClick="editText2" />




        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/question_6_text"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:text="TextView"
            android:textSize="18sp" />


        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton4Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:textColor="#000000"
                android:text="@string/a_5" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton5Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="12dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:textColor="#000000"
                android:text="@string/b_6" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton6Clicked"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="12dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:textColor="#000000"
                android:text="@string/c_7" />


        </RadioGroup>


        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:text="@string/score"
            android:textAllCaps="true"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/resetButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="reset"
            android:text="@string/reset"
            android:textColor="#FAFAFA"
            android:textStyle="bold" />


        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="submit"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="@string/submit"
            android:textStyle="bold"
            android:textColor="#FAFAFA"/>



    </LinearLayout>

</ScrollView>