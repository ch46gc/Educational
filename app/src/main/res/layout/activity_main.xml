<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snowboards">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/educational"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.educational.MainActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="1) What year was snowboarding invented?"
            android:textColor="#000000"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox1Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="@string/a_1980" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox2Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="@string/b_1970" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox3Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="@string/c_1960" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="2) Which of these are a predecessor of the snowboard?"
            android:textColor="#000000"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton1Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/a_snurfer" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton2Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/b_skis" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton3Clicked"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/c_monoski" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="3)The 1998 winter olympics were the first to include snowboarding what country were they held in?"
            android:textColor="#000000"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Country"
            android:onClick="editText1" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="4) Snowboarding was banned until the early 1980's at resorts. Which of these opened its slopes up to snowboarding in1983 - 1984 ?"
            android:textColor="#000000"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkBox4Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="@string/a_sugarbush_resort" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkBox5Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="@string/b_stratton_mountain_resort" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkBox6Clicked"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="@string/c_squaw_valley_resort" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="5) Who was the father of snowboarding?"
            android:textColor="#000000"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:onClick="editText2" />




        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="6) How many layers make up a snowboard construction sandwich?"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:text="TextView" />


        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton4Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/a_5" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton5Clicked"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/b_6" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton6Clicked"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:text="@string/c_7" />


        </RadioGroup>


        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/score"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="reset"
            android:text="@string/reset" />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="submit"
            android:text="@string/submit"/>



    </LinearLayout>

</ScrollView>