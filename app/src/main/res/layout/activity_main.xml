<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/snowboards">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/educational"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        tools:context="com.example.android.educational.MainActivity">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/paddingBottom"
            android:paddingTop="@dimen/paddingTop"
            android:padding="@dimen/padding"
            android:text="@string/question_1_text"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"/>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox1Clicked"
            android:paddingRight="@dimen/paddingRight_1"
            android:paddingLeft="@dimen/paddingLeft_1"
            android:paddingStart="@dimen/paddingStart_1"
            android:paddingEnd="@dimen/paddingEnd_1"
            android:layout_marginStart="@dimen/layout_margin_start_1"
            android:layout_marginLeft="@dimen/layout_margin_left_1"
            android:layout_marginTop="@dimen/layout_margin_top_1"
            android:layout_marginBottom="@dimen/layout_margin_bottom_1"
            android:layout_marginRight="@dimen/layout_margin_right_1"
            android:layout_marginEnd="@dimen/layout_margin_end_1"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="@color/text_color2"
            android:text="@string/a_1980" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox2Clicked"
            android:paddingStart="@dimen/paddingStart_1"
            android:paddingEnd="@dimen/paddingEnd_1"
            android:paddingRight="@dimen/paddingRight_1"
            android:paddingLeft="@dimen/paddingLeft_1"
            android:layout_marginStart="@dimen/layout_margin_start_1"
            android:layout_marginLeft="@dimen/layout_margin_left_1"
            android:layout_marginTop="@dimen/layout_margin_top_1"
            android:layout_marginBottom="@dimen/layout_margin_bottom_1"
            android:layout_marginRight="@dimen/layout_margin_right_1"
            android:layout_marginEnd="@dimen/layout_margin_end_1"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="@color/text_color2"
            android:text="@string/b_1970" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBox3Clicked"
            android:paddingStart="@dimen/paddingStart_1"
            android:paddingEnd="@dimen/paddingEnd_1"
            android:paddingRight="@dimen/paddingRight_1"
            android:paddingLeft="@dimen/paddingLeft_1"
            android:layout_marginStart="@dimen/layout_margin_start_1"
            android:layout_marginLeft="@dimen/layout_margin_left_1"
            android:layout_marginTop="@dimen/layout_margin_top_1"
            android:layout_marginBottom="@dimen/layout_margin_bottom_1"
            android:layout_marginRight="@dimen/layout_margin_right_1"
            android:layout_marginEnd="@dimen/layout_margin_end_1"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="@color/text_color2"
            android:text="@string/c_1960" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_bottom_2"
            android:paddingTop="@dimen/padding_top_2"
            android:padding="@dimen/padding_2"
            android:text="@string/question_2_text"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_2"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/padding_right_3"
            android:paddingLeft="@dimen/padding_left_3"
            android:paddingEnd="@dimen/padding_end_3"
            android:paddingStart="@dimen/padding_start_3">


            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton1Clicked"
                android:paddingStart="@dimen/padding_start_4"
                android:paddingLeft="@dimen/padding_left_4"
                android:paddingRight="@dimen/padding_right_4"
                android:paddingEnd="@dimen/padding_end_4"
                android:layout_marginStart="@dimen/margin_start_4"
                android:layout_marginLeft="@dimen/margin_left_4"
                android:layout_marginTop="@dimen/margin_top_4"
                android:layout_marginBottom="@dimen/margin_bottom_4"
                android:layout_marginRight="@dimen/margin_right_6"
                android:layout_marginEnd="@dimen/margin_end_6"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="@string/a_snurfer"
                android:textColor="@color/text_color2" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton2Clicked"
                android:paddingStart="@dimen/padding_start_4"
                android:paddingLeft="@dimen/padding_left_4"
                android:paddingRight="@dimen/padding_right_4"
                android:paddingEnd="@dimen/padding_end_4"
                android:textColor="@color/text_color2"
                android:layout_marginStart="@dimen/margin_start_4"
                android:layout_marginLeft="@dimen/margin_left_4"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_marginBottom="@dimen/marginBottom"
                android:layout_marginRight="@dimen/margin_right_6"
                android:layout_marginEnd="@dimen/margin_end_6"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="@string/b_skis" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton3Clicked"
                android:paddingStart="@dimen/padding_start_4"
                android:paddingLeft="@dimen/padding_left_4"
                android:paddingRight="@dimen/padding_right_4"
                android:paddingEnd="@dimen/padding_end_4"
                android:textColor="@color/text_color2"
                android:layout_marginStart="@dimen/margin_start_4"
                android:layout_marginLeft="@dimen/margin_left_4"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_marginBottom="@dimen/marginBottom"
                android:layout_marginRight="@dimen/marginRight"
                android:layout_marginEnd="@dimen/marginEnd"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="@string/c_monoski" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/paddingBottom"
            android:paddingTop="@dimen/paddingTop"
            android:padding="@dimen/padding"
            android:text="@string/question_3_text"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_2"/>


        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:hint="@string/country"
            android:padding="@dimen/padding"
            android:onClick="editText1" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop"
            android:padding="@dimen/padding"
            android:paddingBottom="@dimen/paddingBottom"
            android:text="@string/question_4_text"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_2"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="checkBox4Clicked"
            android:paddingStart="@dimen/padding_start_4"
            android:paddingLeft="@dimen/padding_left_4"
            android:paddingRight="@dimen/padding_right_4"
            android:paddingEnd="@dimen/padding_end_4"
            android:layout_marginStart="@dimen/margin_start_5"
            android:layout_marginLeft="@dimen/margin_left_5"
            android:layout_marginTop="@dimen/margin_top_5"
            android:layout_marginBottom="@dimen/margin_bottom_5"
            android:layout_marginRight="@dimen/margin_right_5"
            android:layout_marginEnd="@dimen/margin_end_5"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="@color/text_color2"
            android:text="@string/a_sugarbush_resort" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="checkBox5Clicked"
            android:paddingStart="@dimen/padding_start_4"
            android:paddingLeft="@dimen/padding_left_4"
            android:paddingRight="@dimen/padding_right_4"
            android:paddingEnd="@dimen/padding_end_4"
            android:layout_marginStart="@dimen/margin_start_6"
            android:layout_marginLeft="@dimen/margin_left_6"
            android:layout_marginTop="@dimen/margin_top_6"
            android:layout_marginBottom="@dimen/margin_bottom_6"
            android:layout_marginRight="@dimen/margin_right_5"
            android:layout_marginEnd="@dimen/margin_end_5"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="@color/text_color2"
            android:text="@string/b_stratton_mountain_resort" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="checkBox6Clicked"
            android:paddingStart="@dimen/padding_start_4"
            android:paddingLeft="@dimen/padding_left_4"
            android:paddingRight="@dimen/padding_right_4"
            android:paddingEnd="@dimen/padding_end_4"
            android:layout_marginStart="@dimen/margin_start_7"
            android:layout_marginLeft="@dimen/margin_left_7"
            android:layout_marginTop="@dimen/margin_top_6"
            android:layout_marginBottom="@dimen/margin_bottom_6"
            android:layout_marginRight="@dimen/margin_right_5"
            android:layout_marginEnd="@dimen/margin_end_5"
            android:scaleY="1.50"
            android:scaleX="1.50"
            android:textColor="@color/text_color2"
            android:text="@string/c_squaw_valley_resort" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_7"
            android:padding="@dimen/padding"
            android:text="@string/question_5_text"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_2"/>


        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:padding="@dimen/padding"
            android:onClick="editText2" />




        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_8"
            android:padding="@dimen/padding"
            android:text="@string/question_6_text"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            tools:text="TextView"
            android:textSize="@dimen/text_size_2" />


        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_3">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton4Clicked"
                android:paddingStart="@dimen/padding_start_4"
                android:paddingLeft="@dimen/padding_left_4"
                android:paddingRight="@dimen/padding_right_4"
                android:paddingEnd="@dimen/padding_end_4"
                android:layout_marginStart="@dimen/margin_start_8"
                android:layout_marginLeft="@dimen/margin_left_8"
                android:layout_marginTop="@dimen/margin_top_9"
                android:layout_marginBottom="@dimen/margin_bottom_9"
                android:layout_marginRight="@dimen/margin_right_9"
                android:layout_marginEnd="@dimen/margin_end_9"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:textColor="@color/text_color2"
                android:text="@string/a_5" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton5Clicked"
                android:paddingStart="@dimen/padding_start_4"
                android:paddingLeft="@dimen/padding_left_4"
                android:paddingRight="@dimen/padding_right_4"
                android:paddingEnd="@dimen/padding_end_4"
                android:layout_marginStart="@dimen/margin_start_8"
                android:layout_marginLeft="@dimen/margin_left_8"
                android:layout_marginTop="@dimen/margin_top_9"
                android:layout_marginBottom="@dimen/margin_bottom_9"
                android:layout_marginRight="@dimen/margin_right_9"
                android:layout_marginEnd="@dimen/margin_end_9"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:textColor="@color/text_color2"
                android:text="@string/b_6" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="radioButton6Clicked"
                android:paddingStart="@dimen/padding_start_4"
                android:paddingLeft="@dimen/padding_left_4"
                android:paddingRight="@dimen/padding_right_4"
                android:paddingEnd="@dimen/padding_end_4"
                android:layout_marginStart="@dimen/margin_start_8"
                android:layout_marginLeft="@dimen/margin_left_8"
                android:layout_marginTop="@dimen/margin_top_9"
                android:layout_marginBottom="@dimen/margin_bottom_9"
                android:layout_marginRight="@dimen/margin_right_9"
                android:layout_marginEnd="@dimen/margin_end_9"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:textColor="@color/text_color2"
                android:text="@string/c_7" />


        </RadioGroup>


        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_bottom_10"
            android:background="@color/colorPrimaryDark"
            android:paddingEnd="@dimen/padding_end_10"
            android:paddingLeft="@dimen/padding_left_10"
            android:paddingRight="@dimen/padding_right_10"
            android:paddingStart="@dimen/padding_start_10"
            android:text="@string/score"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_3"
            android:textStyle="bold" />



        <Button
            android:id="@+id/resetButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_11"
            android:background="@color/colorPrimaryDark"
            android:onClick="reset"
            android:text="@string/reset"
            android:textColor="@color/text_color"
            android:textStyle="bold" />


        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_bottom_11"
            android:layout_marginTop="@dimen/margin_top_12"
            android:background="@color/colorPrimaryDark"
            android:onClick="submit"
            android:paddingBottom="@dimen/padding_bottom_10"
            android:paddingTop="@dimen/padding_top_10"
            android:text="@string/submit"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>



    </LinearLayout>

</ScrollView>